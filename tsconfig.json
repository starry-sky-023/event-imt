{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		"outDir": "./dist",
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src",
		"src/__tests__"
	]
}